---
import Layout from "@/layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from "/i18n/utils";
import BlogPostPreview from "@/components/BlogPostPreview.astro";
import { getCollection } from "astro:content";
import FirstBlogPostPreview from "@/components/FirstBlogPostPreview.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const blogEntries = await getCollection("blog");
---

<Layout title={t("nav.news")}>
  <section class="blog-posts">
    {
      blogEntries.map((entry, idx) => {
        if (idx === 0) {
          return <FirstBlogPostPreview blogPostData={entry.data} />;
        } else {
          return <BlogPostPreview blogPostData={entry.data} />;
        }
      })
    }
  </section>
</Layout>

<style>
  .blog-posts {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 5rem 5rem;
    max-width: 100vw;
    column-gap: 1rem;
    row-gap: 10rem;
  }

  @media (min-width: 768px) {
    .blog-posts {
      /* padding: 5rem 16.25rem; */
      justify-content: center;
    }
  }
</style>
