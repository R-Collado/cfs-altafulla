---
import PlayerBirthInfo from "./PlayerBirthInfo.astro";
import SideDialog from "./SideDialog.astro";

import playerLayoutTest from "@/images/player-img-test.webp";

const { player, playerContent } = Astro.props;
const { Content } = await playerContent.render();

const separatedPlayerContent = playerContent.body.split("\n");

const bioFirstParagraph = separatedPlayerContent[3];
const bioSecondParagraph = separatedPlayerContent[5];
---

<section class="player-biography">
  <div class="player-img-wrapper">
    <img src={playerLayoutTest.src} alt="" />
  </div>
  <section class="player-short-bio">
    <p class="header">
      {bioFirstParagraph}
    </p>
    <p class="description">
      {bioSecondParagraph}
    </p>
    <button id="biography-opener">Biograf√≠a completa</button>
  </section>

  <SideDialog isOpen={false} player={player}>
    <Content />
  </SideDialog>
  <PlayerBirthInfo />
</section>

<style>
  .player-biography {
    padding-top: 2rem;
    display: flex;
    align-items: center;
    flex-direction: column;
  }

  .player-img-wrapper {
    position: relative;
    width: 17.375rem;
    height: 23.4375rem;
  }

  img {
    height: 100%;
    border-radius: 1rem;
    width: 100%;
    z-index: 2;
    position: relative;
  }

  .player-img-wrapper::before,
  .player-img-wrapper::after {
    content: "";
    position: absolute;
    border-radius: 0.375rem;
    height: 4.375rem;
    width: 2rem;
    z-index: -1;
    transition:
      top 0.3s,
      bottom 0.3s,
      width 0.4s;
  }

  .player-img-wrapper::before {
    background: var(--secondary-color);
    top: -0.75rem;
    left: -0.5rem;
  }

  .player-img-wrapper::after {
    background: var(--primary-color);
    bottom: -0.75rem;
    right: -0.5rem;
  }

  .player-img-wrapper:hover {
    &::before {
      top: 70%;
      width: 8rem;
    }

    &::after {
      bottom: 80%;
      width: 5rem;
    }
  }

  .player-short-bio {
    font-size: 0.75rem;
    margin-top: 1rem;
    max-width: 30rem;
    margin-inline: auto;
    padding: 0 1em;
  }

  .player-short-bio .header {
    font-weight: 600;
    margin-bottom: 1rem;
    font-size: 0.75rem;
    text-transform: uppercase;
  }

  .player-short-bio .description {
    line-height: 1rem;
  }

  #biography-opener {
    text-transform: uppercase;
    cursor: pointer;
    background: transparent;
    border: none;
    margin-top: 1rem;
    font-weight: 600;
    color: var(--secondary-color);
  }

  #biography-opener:hover {
    text-decoration: underline;
  }
</style>
