---
import SideDialog from "./SideDialog.astro";

import playerBg1 from "@/images/player-background-keeper.svg";
import playerBg2 from "@/images/player-background-wing.svg";
import playerBg3 from "@/images/player-img-background-3.webp";
import playerBg4 from "@/images/player-background-pivot.svg";

import playerLayoutTest from "@/images/player-layout-test.webp";

const { player, playerContent } = Astro.props;
const { Content } = await playerContent.render();

const images: ImageMetadata[] = [playerBg1, playerBg2, playerBg3, playerBg4];
---

<section class="player-biography">
  <div class="player-img-wrapper">
    <img src={playerLayoutTest.src} alt="" />
  </div>
  <section class="player-short-bio">
    <p class="header">
      Lorem, ipsum dolor sit amet consectetur adipisicing elit. Maiores
      distinctio repudiandae ea deleniti, minima sequi eveniet aliquid debitis
      quod.
    </p>
    <p class="description">
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Ipsum nobis nihil
      voluptatum ratione? Accusamus amet ullam cum dicta sequi porro.
    </p>
    <button id="biography-opener">Biograf√≠a completa</button>
  </section>

  <SideDialog isOpen={false} player={player}>
    <Content />
  </SideDialog>
</section>

<style>
  .player-biography {
    padding: 2rem;
    display: flex;
    align-items: center;
    flex-direction: column;
  }

  .player-img-wrapper {
    position: relative;
    max-width: 17.375rem;
    max-height: 23.4375rem;
  }

  img {
    height: 100%;
    border-radius: 1rem;
    max-width: 17.375rem;
    z-index: 2;
    position: relative;
  }

  .player-img-wrapper::before,
  .player-img-wrapper::after {
    content: "";
    position: absolute;
    border-radius: 0.375rem;
    height: 4.375rem;
    width: 2rem;
    z-index: -1;
    transition:
      top 0.3s,
      bottom 0.3s,
      width 0.4s;
  }

  .player-img-wrapper::before {
    background: var(--secondary-color);
    top: -0.75rem;
    left: -0.5rem;
  }

  .player-img-wrapper::after {
    background: var(--primary-color);
    bottom: -0.75rem;
    right: -0.5rem;
  }

  .player-img-wrapper:hover {
    &::before {
      top: 70%;
      width: 8rem;
    }

    &::after {
      bottom: 80%;
      width: 5rem;
    }
  }

  .player-short-bio {
    font-size: 0.75rem;
    margin-top: 1rem;
    max-width: 30rem;
  }

  .player-short-bio .header {
    font-weight: 600;
    margin-bottom: 1rem;
    font-size: 0.75rem;
    text-transform: uppercase;
  }

  .player-short-bio .description {
    line-height: 1rem;
  }

  #biography-opener {
    text-transform: uppercase;
    cursor: pointer;
    background: transparent;
    border: none;
    margin-top: 1rem;
    font-weight: 600;
  }

  #biography-opener:hover {
    text-decoration: underline;
  }
</style>
